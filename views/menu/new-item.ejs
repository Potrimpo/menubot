<h3>new menu item</h3>
<form id="new-menu">
    <div class="form-group">
        <input type="text" class="form-control menu" id="item" placeholder="item name">
    </div>
    <div class="row">
        <div class="col-xs-6 col-sm-6">
            <h4>new type</h4>
            <div class="form-group">
                <input type="text" class="form-control menu" id="type" placeholder="type name">
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    <h5>new size / price</h5>
                    <div class="form-group">
                        <input type="text" class="form-control menu" id="size" placeholder="size">
                        <div class="input-group">
                            <span class="input-group-addon">$</span>
                            <input type="text" class="form-control menu" aria-label="price" id="price" placeholder="price">
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default btn-space" id="button-new-item">Submit</button>
        </div>
    </div>
</form>
