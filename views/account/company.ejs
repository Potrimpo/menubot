<% layout('layout') -%>

  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-sm-6 col-xs-12">
          <h1 class="company-head" id="<%= fbid %>"><%= title %></h1>
        </div>
        <div class="col-sm-6 col-xs-12">
          <div class="row">
            <div class="location-setter-container text-center">
              <form id="location-setter" class="form-inline the-magic-fix-that-fixes-everything-and-you-have-no-idea-why-it-does-that">
                  <div class="form-group">
                    <div class="col-xs-9">
                      <input type="text" role="button" class="form-control" placeholder="Location" autocomplete="off"
                         <% if (location) { %> value="<%= location %>" <% } %>
                      >
                    </div>
                    <div class="col-xs-1">
                      <button type="submit" class="btn btn-default">Set</button>
                    </div>
                  </div>
                  <div style="clear:both;"></div>
              </form>
            </div>
          </div>
          <div class="row">
            <div class="location-setter-container">
              <form id="timeSettingForm" class="form-inline the-magic-fix-that-fixes-everything-and-you-have-no-idea-why-it-does-that">
                  <div class="col-xs-12" style="padding:0">
                    <div class="input-group reactive-distr">
                      <span class="input-group-addon">Opening</span>
                      <input type="time" id="opentime" name="openTime"
                         class="form-control time-setter" value="<%= opentime %>"
                      >
                    </div>
                    <div class="input-group">
                      <span class="input-group-addon">Closing</span>
                      <input type="time" id="closetime" name="closeTime"
                         class="form-control time-setter" value="<%= closetime %>"
                      >
                    </div>
                  </div>
                  <div style="clear:both;"></div>

                  <div class="col-xs-10" style="padding:0; margin-top:5px;">
                    <label class="checkbox-inline" style="padding:0; margin-top:3px;">
                      Open today? <input type="checkbox" name="openToday" id="openToday" <% if (status) { %>checked<% } %> >
                    </label>
                  </div>
                  <div class="col-xs-2" style="padding:0; margin-top:5px;">
                    <button type="submit" style="float:right;" class="btn btn-default">Set</button>
                  </div>
                  <div style="clear:both;"></div>

              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row reactive-centering">
        <a href="/" class="btn btn-default btn-space">
          <i class="fa fa-long-arrow-left" style="font-size:18px; margin-right:1px;" aria-hidden="true"></i>
        </a>
        <a href="/api/photos/<%= fbid %>" role="button" class="btn btn-default btn-space misc-async">
            Fetch photos from Facebook
        </a>
        <% if (bot_status == true) { %>
        <a href="/api/deactivate/<%= fbid %>" role="button" class="btn btn-default btn-space misc-async">Deactivate messenger bot</a>
        <% } else if (bot_status == false) { %>
        <a href="/api/activate/<%= fbid %>" role="button" class="btn btn-default btn-space misc-async">Activate messenger bot</a>
        <% } %>
        <a href="https://youtu.be/UXeVr63wwYs" target="_blank" role="button" class="btn btn-default btn-space">
          <i class="fa fa-info-circle info-button" aria-hidden="true"></i> Tutorial
        </a>
      </div>
    </div>
  </div>
  <hr>
  <%- include ../menu/items %>
