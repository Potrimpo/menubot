<% layout('layout') -%>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="row">
        <div class="col-sm-6 col-xs-12">
          <h1 class="company-head" id="<%= fbid %>"><%= title %></h1>
        </div>
        <div class="col-sm-6 col-xs-12">
          <div class="row">
            <div class="location-setter-container text-center" style="margin-top:1em; min-width: 310px;">
              <form id="location-setter" class="form-inline the-magic-fix-that-fixes-everything-and-you-have-no-idea-why-it-does-that">
                  <div class="form-group">
                    <div class="col-xs-9">
                      <input type="text" role="button" class="form-control" placeholder="Location" autocomplete="off"
                         <% if (location) { %> value="<%= location %>" <% } %>
                      >
                    </div>
                    <div class="col-xs-1">
                      <button type="submit" class="btn btn-default">Set</button>
                    </div>
                  </div>
                  <div style="clear:both;"></div>
              </form>
            </div>
          </div>
          <div class="row">
            <div class="location-setter-container text-center" style="margin-top:1em; min-width: 310px;">
              <form id="time-setter" class="form-inline the-magic-fix-that-fixes-everything-and-you-have-no-idea-why-it-does-that">
                  <!-- <div class="form-group"> -->
                    <div class="input-group reactive-distr">
                      <span class="input-group-addon short-time-addon">Opening</span>
                      <select id="openTime" name="openTime" class="form-control">
                        <option>	12:00	 AM	</option>
                        <option>	01:00	 AM	</option>
                        <option>	02:00	 AM	</option>
                        <option>	03:00	 AM	</option>
                        <option>	04:00	 AM	</option>
                        <option>	05:00	 AM	</option>
                        <option>	06:00	 AM	</option>
                        <option>	07:00	 AM	</option>
                        <option>	08:00	 AM	</option>
                        <option>	09:00	 AM	</option>
                        <option>	10:00	 AM	</option>
                        <option>	11:00	 AM	</option>
                      </select>
                    </div>
                    <div class="input-group">
                      <span class="input-group-addon short-time-addon">Closing</span>
                      <select id="closeTime" name="closeTime" class="form-control">
                        <option>	12:00	 PM	</option>
                        <option>	01:00	 PM	</option>
                        <option>	02:00	 PM	</option>
                        <option>	03:00	 PM	</option>
                        <option>	04:00	 PM	</option>
                        <option>	05:00	 PM	</option>
                        <option>	06:00	 PM	</option>
                        <option>	07:00	 PM	</option>
                        <option>	08:00	 PM	</option>
                        <option>	09:00	 PM	</option>
                        <option>	10:00	 PM	</option>
                        <option>	11:00	 PM	</option>
                      </select>
                    </div>

                  <!-- </div> -->
                  <div style="clear:both;"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div class="row reactive-centering">
        <a href="/" class="btn btn-default btn-space">
          <i class="fa fa-long-arrow-left" style="font-size:18px; margin-right:1px;" aria-hidden="true"></i>
        </a>
        <a href="/api/photos/<%= fbid %>" role="button" class="btn btn-default btn-space misc-async">
            Fetch photos from Facebook
        </a>
        <% if (bot_status == true) { %>
        <a href="/api/deactivate/<%= fbid %>" role="button" class="btn btn-default btn-space misc-async">Deactivate messenger bot</a>
        <% } else if (bot_status == false) { %>
        <a href="/api/activate/<%= fbid %>" role="button" class="btn btn-default btn-space misc-async">Activate messenger bot</a>
        <% } %>
        <a href="https://youtu.be/64S6wWF8DS0" target="_blank" role="button" class="btn btn-default btn-space">
          <i class="fa fa-info-circle" style="font-size:18px; margin-left:-4px; margin-right:-3px;" aria-hidden="true"></i>
        </a>
      </div>
    </div>
  </div>
  <hr>
  <%- include ../menu/items %>
</div>
